<h1>Eat-Da-Burger!</h1>


<div class='columns is-centered'>
    <div class="column">
<h2>Burgers that need to be devoured</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="column">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="new-burger-name" name="burger">
  </div>

  <button id="new-burger" type="submit">Add Burger</button>
</form>
</div>

<div class="column">
<h2>Burgers that have been devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
