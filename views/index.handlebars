<section class="hero is-small is-primary is-bold">
  <div class="hero-body">
      <h1 class="title is-1">
        Eat-Da-Burger!
      </h1>
  </div>
</section>



<div class='columns is-centered'>
    <div class="column mx-2 mt-2">
<h2 class="title">Burgers to Devour</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="column mx-2 mt-2">
<h2 class="title">Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="new-burger-name" name="burger">
  </div>

  <button id="new-burger" type="submit">Add Burger</button>
</form>
</div>

<div class="column mx-2 mt-2">
<h2 class="title">Devoured Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
