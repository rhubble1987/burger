<section class="hero is-small is-primary is-bold">
  <div class="hero-body">
      <h1 class="title is-1">
        Eat-Da-Burger!
      </h1>
  </div>
</section>



<div class='columns is-centered'>
<div class="column mx-2 mt-2 non-devoured-burgers">
<h2 class="title">Burgers to Devour</h2>

<ul class="not-devoured">
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>
<script>
    
</script>
</div>

<div class="column mx-2 mt-2">
<h2 class="title">Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="new-burger-name" name="burger">
  </div>
  <br>
  <button id="new-burger" class="button is-warning is-medium" type="submit">Add Burger</button>
</form>
</div>

<div class="column mx-2 mt-2 devoured-burgers">
<h2 class="title">Devoured Burgers</h2>


<ul class="devoured">
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
